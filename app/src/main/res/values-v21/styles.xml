<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:colorPrimary">@color/status_bar</item>
        <item name="android:colorAccent">@color/switch_checked</item>
    </style>

    <style name="SwitchTheme" parent="Base.Widget.AppCompat.CompoundButton.Switch">
        <item name="android:background">@color/switch_bar</item>
        <item name="android:colorControlNormal">@color/switch_unchecked</item>
        <item name="colorControlActivated">@color/switch_checked</item>
    </style>

</resources>
