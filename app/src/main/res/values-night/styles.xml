<resources>

    <!-- Base application theme. -->
    <style name="Theme.App.Default">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="PrimaryToolbar" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:background">@color/primaryColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
    </style>

    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Card</item>
    </style>

    <style name="ThemeOverlay.App.Card" parent="">
        <item name="colorPrimary">@color/primaryColor</item>
    </style>

    <style name="GreyTextAppearance">
        <item name="android:textColor">@color/lightGreyTextColor</item>
    </style>

</resources>
